
public class Salute {
	Persona persona;

	Salute(Persona x){
		this.persona = x;
		this.BMR();
	}
	
	void BMR(){
		if(persona.sesso == 'f')
			this.BMRf();
		else
			this.BMRm();
	}
	
	void BMRf(){
		double MB = 655 + (9.6 * persona.peso) + (1.8 * persona.altezza) * (4.7 * persona.eta);
		System.out.println(MB);
	}
	
	void BMRm(){
		double MB = 655 + (13.8 * persona.peso) + (1.8 * persona.altezza) * (4.7 * persona.eta);
		System.out.println(MB);
	}

}
